log_file = /var/log/audit/audit.log
log_format = ENRICHED
log_group = root
priority_boost = 4
flush = INCREMENTAL_ASYNC
freq = 50
num_logs = {{ os_hardening_audit_num_logs }}
max_log_file = {{ os_hardening_audit_max_log_file }}
max_log_file_action = {{ os_hardening_audit_max_log_file_action }}
space_left = 75
space_left_action = {{ os_hardening_audit_space_left_action }}
admin_space_left = 50
admin_space_left_action = {{ os_hardening_audit_admin_space_left_action }}
disk_full_action = {{ os_hardening_audit_disk_full_action }}
disk_error_action = {{ os_hardening_audit_disk_error_action }}
name_format = hostname
