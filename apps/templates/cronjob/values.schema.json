{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "required": ["app", "schedule"],
  "properties": {
    "app": {
      "type": "object",
      "required": ["name", "team", "image"],
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1,
          "description": "Application name, used for resource naming"
        },
        "team": {
          "type": "string",
          "minLength": 1,
          "description": "Owning team name, used for labels and RBAC"
        },
        "image": {
          "type": "object",
          "required": ["repository", "tag"],
          "properties": {
            "repository": {
              "type": "string",
              "pattern": "^harbor\\.sre\\.internal/",
              "description": "Must be from the internal Harbor registry"
            },
            "tag": {
              "type": "string",
              "minLength": 1,
              "not": { "const": "latest" },
              "description": "Image tag â€” must be pinned, never latest"
            },
            "pullPolicy": {
              "type": "string",
              "enum": ["Always", "IfNotPresent", "Never"]
            }
          }
        },
        "resources": {
          "type": "object",
          "properties": {
            "requests": {
              "type": "object",
              "properties": {
                "cpu": { "type": "string" },
                "memory": { "type": "string" }
              }
            },
            "limits": {
              "type": "object",
              "properties": {
                "cpu": { "type": "string" },
                "memory": { "type": "string" }
              }
            }
          }
        },
        "command": {
          "type": "array",
          "items": { "type": "string" }
        },
        "args": {
          "type": "array",
          "items": { "type": "string" }
        },
        "env": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["name"],
            "properties": {
              "name": { "type": "string" },
              "value": { "type": "string" },
              "secretRef": { "type": "string" }
            }
          }
        }
      }
    },
    "schedule": {
      "type": "object",
      "required": ["cron"],
      "properties": {
        "cron": {
          "type": "string",
          "minLength": 1,
          "description": "Cron expression for the schedule"
        },
        "timezone": {
          "type": "string",
          "description": "IANA timezone (e.g., America/New_York)"
        },
        "successfulJobsHistoryLimit": {
          "type": "integer",
          "minimum": 0
        },
        "failedJobsHistoryLimit": {
          "type": "integer",
          "minimum": 0
        },
        "concurrencyPolicy": {
          "type": "string",
          "enum": ["Allow", "Forbid", "Replace"]
        },
        "startingDeadlineSeconds": {
          "type": "integer",
          "minimum": 0
        },
        "activeDeadlineSeconds": {
          "type": "integer",
          "minimum": 0
        },
        "backoffLimit": {
          "type": "integer",
          "minimum": 0
        },
        "restartPolicy": {
          "type": "string",
          "enum": ["Never", "OnFailure"]
        }
      }
    },
    "serviceAccount": {
      "type": "object",
      "properties": {
        "create": { "type": "boolean" }
      }
    },
    "serviceMonitor": {
      "type": "object",
      "properties": {
        "enabled": { "type": "boolean" },
        "interval": { "type": "string" },
        "port": { "type": "integer" },
        "path": { "type": "string" }
      }
    },
    "networkPolicy": {
      "type": "object",
      "properties": {
        "enabled": { "type": "boolean" },
        "additionalEgress": { "type": "array" }
      }
    }
  }
}
